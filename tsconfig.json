{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"lib": [
			"es2015",
			"ESNext"
		],
		"target": "ES3",
		"outDir": "./lib",
		"skipLibCheck": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"inlineSourceMap": false,
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		"lib"
	]
}
